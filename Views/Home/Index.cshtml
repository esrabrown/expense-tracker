@model IEnumerable<ExpenseTracker.Models.Expense>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           <tr>
            <td>@item.Description</td>
            <td>@item.Amount</td>
            <td>@item.Date</td>
            <td>
                <!-- gonna add edit and delete buttons -->
            </td>
           </tr>
        }
    </tbody>
</table>
