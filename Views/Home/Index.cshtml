@model IEnumerable<ExpenseTracker.Models.Expense>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
               <tr>
                <td>@item.Description</td>
                <td>@item.Amount</td>
                <td>@item.Date</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
               </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No expenses found.</p>
}

<a asp-controller="Expense" asp-action="Create">Create New Expense</a>